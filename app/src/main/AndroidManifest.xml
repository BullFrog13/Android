<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkachenko.yevgeniy.android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <permission android:name="com.tkachenko.yevgeniy.android.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.tkachenko.yevgeniy.android.WRITE_DATABASE" android:protectionLevel="normal" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.tkachenko.yevgeniy.android.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.tkachenko.yevgeniy.android.ColorEditorActivity" />
        <activity android:name="com.tkachenko.yevgeniy.android.CalculatorActivity" />
        <activity android:name="com.tkachenko.yevgeniy.android.NotesActivity" />
        <activity android:name="com.tkachenko.yevgeniy.android.NoteEditorActivity"
                  android:parentActivityName="com.tkachenko.yevgeniy.android.NotesActivity"></activity>
        <provider
            android:authorities="com.tkachenko.yevgeniy.android.notes"
            android:name="com.tkachenko.yevgeniy.android.NotesProvider"
            android:readPermission="com.bogomolov.alexander.androidlab.READ_DATABASE"
            android:writePermission="com.bogomolov.alexander.androidlab.WRITE_DATABASE"
            android:exported="true"/>
    </application>

</manifest>